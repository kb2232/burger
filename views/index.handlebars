<div class="container">

    
    <div class="row">
        <div class="col s12">
            <div class="card add">

                <h2>Add a New Burger</h2>
                <form class="">
                    <div class="input-field">
                        <label for="burger_name">Item:</label>
                        <input type="text" id="burger_name" name="name">
                    </div>
                    <button class="btn" type="submit" id="submit">Add it!</button>
                </form>
            </div>
        </div>

        <div class="col l6 col s12">
            <div class="ready card">
                <h2>Burgers: Ready</h2>
                <ul>
                    {{#each burgers}} 
                        {{#unless this.devoured}} 
                            <div class="card item">{{> burger-block devoured=false}}</div>
                        {{/unless}} 
                    {{/each}}
                </ul>
            </div>
        </div>
        <div class="col l6 col s12">
            <div class="devoured card">
                <h2>Burgers: Devoured</h2>
                <ul>
                    {{#each burgers}} 
                        {{#if this.devoured}} 
                            <div class="card item">{{> burger-block devoured=true}}</div>
                        {{/if}} 
                    {{/each}}
                </ul>
            </div>
        </div>

        
    </div>
</div>
